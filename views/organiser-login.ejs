<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title>Organiser Login</title>
</head>
<body>
    <main>
        <h1>Organiser Login</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error">
                <%= error %>
            </div>
        <% } %>

        <form action="/organiser/login" method="post" class="card">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
            </div>
            
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            
            <div class="form-group">
                <button type="submit">Login</button>
            </div>
        </form>

        <div class="form-group" style="text-align: center; margin-top: 1rem;">
            <p>Don't have an account? <a href="/organiser/register" style="color: #0ea5e9; text-decoration: none;">Create one here</a></p>
        </div>
    </main>
</body>
</html>