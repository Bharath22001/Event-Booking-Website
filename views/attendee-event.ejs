<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title>Event Booking - <%= event.name %></title>
    <style>
        .event-details {
            margin-bottom: 30px;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 5px;
        }
        .booking-form {
            max-width: 500px;
            margin: 20px 0;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .tickets-available {
            color: #28a745;
            margin-bottom: 10px;
        }
        .error {
            color: red;
            display: none;
        }

        .popup {
            position: fixed;
            top: 10px;
            right: 10px;
            padding: 15px;
            border-radius: 5px;
            color: #fff;
            font-weight: bold;
            z-index: 1000;
        }
        .popup.success {
            background-color: #28a745;
        }
        .popup.error {
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <h1>Attendee Event Page</h1>

    <!-- Display success or error messages -->
    <% if (typeof success !== "undefined") { %>
        <div id="popupMessage" class="popup success"><%= success %></div>
    <% } %>
    <% if (typeof error !== "undefined") { %>
        <div id="popupMessage" class="popup error"><%= error %></div>
    <% } %>

    <div class="event-details">
        <h2><%= event.name %></h2>
        <p><strong>Date:</strong> <%= new Date(event.date).toLocaleDateString() %></p>
        <p><strong>Description:</strong> <%= event.description %></p>
    </div>

    <div class="tickets-available">
        <p>Full Price Tickets Available: <%= event.remaining_full_price %></p>
        <p>Concession Tickets Available: <%= event.remaining_concession %></p>
    </div>

    <form id="bookingForm" class="booking-form" action="/attendee/book/<%= event.id %>" method="post" onsubmit="return validateForm()">
        <div class="form-group">
            <label for="attendeeName">Your Name:</label>
            <input type="text" id="attendeeName" name="attendeeName" required>
            <div id="nameError" class="error">Please enter your name</div>
        </div>

        <div class="form-group">
            <label for="fullPriceQuantity">Full Price Tickets (£<%= event.full_price %>):</label>
            <input type="number" id="fullPriceQuantity" name="fullPriceQuantity" 
                   min="0" max="<%= event.remaining_full_price %>" value="0">
        </div>

        <div class="form-group">
            <label for="concessionQuantity">Concession Tickets (£<%= event.concession_price %>):</label>
            <input type="number" id="concessionQuantity" name="concessionQuantity" 
                   min="0" max="<%= event.remaining_concession %>" value="0">
            <div id="ticketError" class="error">Please select at least one ticket</div>
        </div>

        <button type="submit">Book Tickets</button>
    </form>

    <a href="/attendee/home">
        <button type="button">Back to Events List</button>
    </a>

    <script>
        function validateForm() {
            let isValid = true;
            const name = document.getElementById('attendeeName').value.trim();
            const fullPrice = parseInt(document.getElementById('fullPriceQuantity').value) || 0;
            const concession = parseInt(document.getElementById('concessionQuantity').value) || 0;
            
            if (!name) {
                document.getElementById('nameError').style.display = 'block';
                isValid = false;
            } else {
                document.getElementById('nameError').style.display = 'none';
            }
            
            if (fullPrice === 0 && concession === 0) {
                document.getElementById('ticketError').style.display = 'block';
                isValid = false;
            } else {
                document.getElementById('ticketError').style.display = 'none';
            }
            
            return isValid;
        }

        window.onload = function () {
            const popup = document.getElementById('popupMessage');
            if (popup) {
                setTimeout(() => {
                    popup.style.display = 'none';
                }, 3000); // Hide after 3 seconds
            }
        };
    </script>
</body>
</html>