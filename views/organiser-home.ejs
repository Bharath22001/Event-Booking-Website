<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title><%= siteName %> - Organiser Home</title>
</head>
<body>
    <form action="/organiser/logout" method="get" style="margin: 0;">
        <button type="submit" class="logout-btn">Logout</button>
    </form>

    <div class="site-info">
        <h2><%= siteName %></h2>
        <p><%= siteDescription %></p>
    </div>

    <div class="settings-section">
        <a href="/organiser/site-settings">
            <button type="button">Site Settings</button>
        </a>
    </div>

    <h2>Published Events</h2>
    <% if (publishedEvents && publishedEvents.length > 0) { %>
        <table class="events-table">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% publishedEvents.forEach(event => { %>
                    <tr>
                        <td><%= event.name %></td>
                        <td><%= new Date(event.date).toLocaleDateString() %></td>
                        <td><%= new Date(event.date).toLocaleTimeString() %></td>
                        <td class="action-buttons">
                            <!-- Link 'Edit' button to the edit page -->
                            <a href="/organiser/edit-event/<%= event.id %>">
                                <button type="button" class="edit-btn">Edit</button>
                            </a>
                            <form action="/organiser/delete/<%= event.id %>" method="post" style="display:inline;">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No published events at this time.</p>
    <% } %>

    <h2>Draft Events</h2>
    <% if (draftEvents && draftEvents.length > 0) { %>
        <table class="events-table">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% draftEvents.forEach(event => { %>
                    <tr>
                        <td><%= event.name %></td>
                        <td><%= new Date(event.date).toLocaleDateString() %></td>
                        <td><%= new Date(event.date).toLocaleTimeString() %></td>
                        <td class="action-buttons">
                            <a href="/organiser/edit-event/<%= event.id %>">
                                <button type="button" class="edit-btn">Edit</button>
                            </a>
                            <form action="/organiser/delete/<%= event.id %>" method="post" style="display:inline;">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                            <form action="/organiser/publish/<%= event.id %>" method="post" style="display:inline;">
                                <button type="submit" class="publish-btn">Publish</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No draft events at this time.</p>
    <% } %>

    <a href="/organiser/create-event">
        <button>Create New Event</button>
    </a>
</body>
</html>
